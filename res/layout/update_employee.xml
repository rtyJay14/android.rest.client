<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        	  android:background="@drawable/sunny" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Name"
        android:textColor="@color/Black"
        android:textSize="17dp" />

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextName"
            android:textColor="@color/Black"
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp" 
            android:singleLine="true"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Login Date"
        android:textColor="@color/Black"
        android:textSize="17dp" />

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editLoginDate"
            android:textColor="@color/Black" 
            android:layout_margin="5dp"
            android:layout_marginBottom="15dp" 
            android:lines="4"/>
<!--        android:singleLine="true"  -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Logout Date"
        android:textColor="@color/Black"
        android:textSize="17dp" />

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editLogoutDate"
            android:textColor="@color/Black"
            android:layout_margin="5dp" 
            android:layout_marginBottom="15dp" 
            android:lines="4"/>
    
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textColor="@color/Black"
                android:id="@+id/buttonSave" android:layout_gravity="center" android:layout_weight="1"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Remove"
                android:textColor="@color/Black"
                android:id="@+id/buttonDelete" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>